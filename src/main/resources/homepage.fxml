<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.gabrielerastelli.contractnet.ui.HomepageUIController">
   <children>
      <CheckBox fx:id="randomNumberOfServersCheckBox" layoutX="13.0" layoutY="40.0" mnemonicParsing="false" selected="true" text="Random number of servers" />
      <Spinner fx:id="numberOfServersSpinner" layoutX="22.0" layoutY="93.0" promptText="Enter integer" visible="false">
         <valueFactory>
            <SpinnerValueFactory.IntegerSpinnerValueFactory max="100" min="0" />
         </valueFactory>
      </Spinner>
      <Text fx:id="numberOfServersText" layoutX="23.0" layoutY="89.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Number of servers" visible="false" />
      <CheckBox fx:id="randomNumberOfTasksCheckBox" layoutX="226.0" layoutY="40.0" mnemonicParsing="false" selected="true" text="Random number of tasks" />
      <Spinner fx:id="numberOfTasksSpinner" layoutX="227.0" layoutY="93.0" promptText="Enter integer" visible="false">
         <valueFactory>
            <SpinnerValueFactory.IntegerSpinnerValueFactory max="100" min="0" />
         </valueFactory>
      </Spinner>
      <Text fx:id="numberOfTasksText" layoutX="227.0" layoutY="89.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Number of tasks" visible="false" />
      <CheckBox fx:id="randomTaskDurationCheckBox" layoutX="424.0" layoutY="42.0" selected="true" text="Random tasks duration" />
      <Spinner fx:id="taskDurationSpinner" layoutX="421.0" layoutY="93.0" promptText="Enter integer" visible="false">
         <valueFactory>
            <SpinnerValueFactory.IntegerSpinnerValueFactory max="100" min="0" />
         </valueFactory>
      </Spinner>
      <Text fx:id="taskDurationText" layoutX="421.0" layoutY="82.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Tasks duration" visible="false" />
      <ComboBox fx:id="simulationTypeComboBox" layoutX="228.0" layoutY="235.0" prefWidth="150.0" />
      <Text layoutX="230.0" layoutY="231.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Simulation type" />

      <Button layoutX="250.0" layoutY="348.0" mnemonicParsing="false" onAction="#showSimulationPage" text="Start simulation" />
   </children>
</AnchorPane>
